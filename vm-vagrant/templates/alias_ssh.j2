gpull_dir()
{
    local verb=${1:-"pull"}
    for rep in ${2:-"/home/jrenouard/GIT_REPOS"}/*; do 
        if [ ! -d "$rep/.git" ]; then
            title1 "$rep NOT .git REPO"
            continue
        fi
        title1 $rep PULLING CHANGES
        ( 
            cd $rep
            git config pull.rebase false 
            git $verb
        )
    done
}

